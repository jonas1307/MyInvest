@model List<MyInvest.Domain.Entities.TipoInstituicaoFinanceira>

@{
    ViewBag.Title = "Tipos de Instituição Financeira";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Tipo de Instituição</th>
            <th>Data de Cadastro</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CodTipoInstituicaoFinanceira</td>
                    <td>@item.Descricao</td>
                    <td>@item.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td><a href="@Url.Action("EditarTipoInstituicao", "Parametrizacao", new { id = item.CodTipoInstituicaoFinanceira })">Editar</a> | <a href="@Url.Action("ExcluirTipoInstituicao", "Parametrizacao", new { id = item.CodTipoInstituicaoFinanceira })">Excluir</a> </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Não existem registros de Tipo de Instituição.</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("NovoTipoInstituicao", "Parametrizacao")" class="btn btn-primary">Criar</a>