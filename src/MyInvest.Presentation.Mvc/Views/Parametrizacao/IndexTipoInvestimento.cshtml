@model List<MyInvest.Domain.Entities.TipoInvestimento>

@{
    ViewBag.Title = "Tipos de Investimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<br />
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Código</th>
        <th>Tipo de Investimento</th>
        <th>Data de Cadastro</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.CodTipoInvestimento</td>
                <td>@item.Descricao</td>
                <td>@item.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td><a href="@Url.Action("EditarTipoInvestimento", "Parametrizacao", new { id = item.CodTipoInvestimento })">Editar</a> | <a href="@Url.Action("ExcluirTipoInvestimento", "Parametrizacao", new { id = item.CodTipoInvestimento })">Excluir</a> </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">Não existem registros de Tipo de Investimento.</td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("NovoTipoInvestimento", "Parametrizacao")" class="btn btn-primary">Criar</a>